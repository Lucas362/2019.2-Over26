<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">

    <Button
        android:id="@+id/button_installment"
        android:layout_width="205dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="470dp"
        android:background="@drawable/big_button_shape"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/radley"
        android:gravity="center_vertical"
        android:text="Parcelar Dívida"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#AE009688"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/cancelCredit"
        android:layout_width="205dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="false"
        android:layout_marginTop="530dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/big_button_shape"
        android:fontFamily="@font/radley"
        android:text="Cancelar Overdraft"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView-pageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="Roboto Slab"
        android:gravity="center_horizontal"
        android:text="Overdraft"
        android:textColor="#000000"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView-interest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:fontFamily="@font/radley"
        android:text="Taxa de juros anual nominal"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />


    <TextView
        android:id="@+id/textView_usage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/radley"
        android:gravity="center_horizontal"
        android:text="usage"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_view_interestValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/radley"
        android:gravity="center_horizontal"
        android:text="5%"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="#80000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_currentUsage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:fontFamily="@font/radley"
        android:gravity="center_horizontal"
        android:text="Uso Atual"
        android:textColor="#7A000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:maxHeight="10dp"
        android:thumb="@drawable/seekbar_dot"
        android:progressDrawable="@drawable/seekbar_progress"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp" />

    <TextView
        android:id="@+id/textView_cur"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="225dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/radley"
        android:text="current"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="250dp"
        android:text="R$ 0"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView_mylimit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:fontFamily="@font/radley"
        android:gravity="center_horizontal"
        android:text="Limite"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:fontFamily="@font/radley"
        android:gravity="center_horizontal"
        android:text="Parcele a dívida para disponibilizar o limite"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:background="#00FCFCFC"
        android:fontFamily="@font/radley"
        android:isScrollContainer="false"
        android:text="Salvar"
        android:textAllCaps="false"
        android:textColor="#AE009688"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/blue_sprit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#5CE1E6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</RelativeLayout>